
{%- liquid
    assign container = section.settings.container
    assign remove_container_space = section.settings.remove_container_space
-%}
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
  @media screen and (max-width: 767px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top_m }}px;
      padding-bottom: {{ section.settings.padding_bottom_m }}px;
    }
  }
{%- endstyle -%}
<section class="middle section-{{ section.id }}-padding" id="section_{{ section.id }}">
	<div class="{{ container }} {%if remove_container_space != false %} p-0 {% endif %}">
        <div class="row justify-content-center">
          <div class="col-12">
                  <slideshows-component>
                  <ul class="slick review-slider slick " id="Slider-{{ section.id }}"   data-slick='{
                      "dots": {{ enable_dot }}, 
                      "autoplay": {{ autoplay }}, 
                      "infinite": true, 
                      "slidesToShow": {{columns_desktop}}, 
                      "slidesToScroll": 1, 
                      "fade": false,
                      "cssEase": "linear", 
                      "arrows": {{arrow_enabled}}, 
                      "autoplaySpeed": {{ autoplay_timeout }}, 
                      "pauseOnHover": false,
                      "responsive": [
                          {
                            "breakpoint": 1024,
                            "settings": {
                  
                              "slidesToShow":{{columns_tab}}
                            }
                          },
                          {
                            "breakpoint": 767,
                            "settings": {
                      
                              "slidesToShow":{{columns_mobile}}
                            }
                          }
                        ]
                      }' >
                      {%- for block in section.blocks -%}

                          {%- if block.type == 'slider_image' -%}
                          {%- liquid

                              assign image = block.settings.img

                            %}
        

                      <li class="review-item block-{{block.id}} slideshow_slide_{{block.id}} " {{ block.shopify_attributes }}>
                          <div class="review-wrapper">
                            <div class="review-author-box">
                              <div class="reeview-img-wrap">
                                  {% if image != blank %}
                                      <img  class="img1" src="{{ image | img_url: 'master' }}" alt="{{ image.alt }}" />
                                      {% else %}
                                          {{ 'image' | placeholder_svg_tag: 'placeholder-svg bg-light' }}
                                  {% endif %}
                            
                              </div>
                              <div class="author-nfo">
                                  {% if authr_name != blank %}
                                      <h4 class="author-name">{{authr_name}}</h4>
                                  {% endif %}
                                  {% if designation != blank %}
                                  <span class="designation">{{designation}}</span>
                                  {% endif %}
                                  {% if review_image_url != blank  %}
                                      <img src="{{review_image_url}}" alt="">
                                  {% endif %}
                              </div>
                            </div>

                            {% if text != blank %}
                            <div class="review-text"> {{text}} </div>
                          {% endif %}
                          </div>
                      </li>
                  {%- endif -%}
                  {%- endfor -%}
                  </ul>
              </slideshows-component>
          </div>
        </div>
	</div>
  </section>

<style>
</style>

{% schema %}
  {
    "name": "FAQ Slider",
    "class": "faq_slider",
    "settings": [
        {
        "type": "select",
        "id": "container",
        "label": "Section Width",
        "options": [
            {"label": "Default", "value": "container"},
            {"label": "Full wide", "value": "container-fluid"}
        ],
        "default": "container"
    },
    {
        "type": "checkbox",
        "id": "remove_container_space",
        "label": "Remove Container Space",
        "default": false
    },
        {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "checkbox",
      "id": "enable_dot",
      "label": "Enable Dots",
      "default": false
    },
    {
        "type": "checkbox",
        "id": "arrow_enabled",
        "label": "Enable Arrow Button",
        "default": false
        },
        {
        "type": "checkbox",
        "id": "autoplay_enabled",
        "label": "Enable Autoplay",
        "default": false
        },
        {
        "type": "range",
        "id": "autoplay_timeout",
        "label": "Change Slides Every",
        "min": 1,
        "max": 100,
        "step": 1,
        "default": 7,
        "unit": "s"
       },
       {
        "type": "range",
        "id": "columns_desktop",
        "min": 1,
        "max": 4,
        "step": 1,
        "default":2,
        "label": "t:sections.featured-collection.settings.columns_desktop.label"
      },
      {
        "type": "range",
        "id": "columns_tab",
        "min": 1,
        "max": 4,
        "step": 1,
        "default":1,
        "label": "Number of columns on Tablet"
      },
      {
        "type": "range",
        "id": "columns_mobile",
        "min": 1,
        "max": 4,
        "step": 1,
        "default":1,
        "label": "Number of columns on Mobile"
      },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
    {
          "type": "header",
          "content": "Top Bottom Padding (Mobile)"
        }, {
          "type": "range",
          "id": "padding_top_m",
          "min": 0,
          "max": 100,
          "step": 2,
          "unit": "px",
          "label": "Padding Top",
          "default": 30
        }, {
          "type": "range",
          "id": "padding_bottom_m",
          "min": 0,
          "max": 100,
          "step": 2,
          "unit": "px",
          "label": "Padding Bottom",
          "default": 30
        }
    ],
    "blocks":[
      {
        "type": "slider_image",
        "name": "Slider Image",
        "settings": [
          {
            "type": "image_picker",
            "id": "slide_image",
            "label": "Slide Image"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "FAQ Slider"
      }
  ] 
  }
{% endschema %}